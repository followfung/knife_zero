{
  "name": "ubuntu_14_04",
  "description": "VM base configuration for Ubuntu 14.04",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "sshd": {
      "sshd_config" : {
        "Port" : "22",
        "Protocol" : "2",
        "HostKey" : [
          "/etc/ssh/ssh_host_rsa_key",
          "/etc/ssh/ssh_host_dsa_key",
          "/etc/ssh/ssh_host_ecdsa_key",
          "/etc/ssh/ssh_host_ed25519_key"
        ],
        "KeyRegenerationInterval" : "3600",
        "ServerKeyBits" : "1024",
        "SyslogFacility" : "AUTH",
        "LogLevel" : "INFO",
        "LoginGraceTime" : "120",
        "PermitRootLogin" : "no",
        "StrictModes" : "yes",
        "RSAAuthentication" : "yes",
        "PubkeyAuthentication" : "yes",
        "IgnoreRhosts" : "yes",
        "RhostsRSAAuthentication" : "no",
        "HostbasedAuthentication" : "no",
        "PermitEmptyPasswords" : "no",
        "ChallengeResponseAuthentication" : "no",
        "X11Forwarding" : "yes",
        "X11DisplayOffset" : "10",
        "PrintMotd" : "no",
        "PrintLastLog" : "yes",
        "TCPKeepAlive" : "yes",
        "AcceptEnv" : "LANG LC_*",
        "Subsystem" : "sftp /usr/lib/openssh/sftp-server",
        "UsePAM" : "yes"
      }
    }
  },
  "override_attributes": {
  },
  "run_list": [
    "recipe[lits_vm]"
  ]
}