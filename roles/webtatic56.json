{
  "name": "webtatic56",
  "description": "Installs PHP 5.6 on RHEL using Webtatic repository",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "override_attributes" : {
    "lits_vm" : {
      "enable_webtatic" : true
    },
    "php": {
      "fpm_package" : "php56w-fpm",
      "packages" : [
        "php56w",
        "php56w-cli",
        "php56w-common",
        "php56w-devel",
        "php56w-ldap",
        "php56w-opcache",
        "php56w-pecl-apcu",
        "php56w-pdo",
        "php56w-mbstring",
        "php56w-mysql",
        "php56w-xml"
      ]
    }
  }
}