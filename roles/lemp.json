{
  "name": "lemp",
  "description": "LEMP configuration",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "lits_vm" : {
      "firewall" : {
        "allow_ports" : {
          "http" : 80,
          "https" : 443
        }
      }
    },
    "php" : {
      "fpm_user" : "nginx",
      "fpm_group" : "nginx",
      "fpm_listen_user" : "nginx",
      "fpm_listen_group" : "nginx",
      "packages" : [
        "php",
        "php-devel",
        "php-pear",
        "php-pdo", 
        "php-mysql", 
        "php-xml", 
        "php-mbstring", 
        "php-apc", 
        "php-gearman", 
        "php-ldap"
      ]
    }
  },
  "override_attributes": {
  },
  "run_list": [
    "recipe[lits_vm::nginx]",
    "recipe[lits_vm::mysql]",
    "recipe[lits_vm::php]"
  ]
}