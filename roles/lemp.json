{
  "name": "lemp",
  "description": "LEMP configuration",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "php" : {
      "fpm_user" : "nginx",
      "fpm_group" : "nginx",
      "fpm_listen_user" : "nginx",
      "fpm_listen_group" : "nginx",
      "packages" : [
        "php",
        "php-devel",
        "php-pear",
        "php-pdo", 
        "php-mysql", 
        "php-xml", 
        "php-mbstring", 
        "php-apc", 
        "php-ldap"
      ]
    }
  },
  "run_list": [
    "role[firewall_allow_https]",
    "recipe[lits_vm::nginx]",
    "recipe[lits_vm::mysql]",
    "recipe[lits_vm::php]"
  ]
}