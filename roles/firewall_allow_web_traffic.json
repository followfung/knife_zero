{
  "name": "firewall_allow_web_traffic",
  "description": "Allows traffic to ports 80 (HTTP) and 443 (HTTPS)",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {
    "lits_vm" : {
      "firewall" : {
        "allow_ports" : {
          "http" : 80,
          "https" : 443
        }
      }
    }
  }
}