{
  "name" : "atom",
  "chef_type" : "role",
  "description" : "Sets up AtoM v2.4.x from RULA repsitories",
  "json_class" : "Chef::Role",
  "default_attributes" : {
    "lits_vm" : {
      "install_nodejs" : true,
      "packages" : [
        "gearmand",
        "memcached",
        "libmemcached-devel",
        "ImageMagick",
        "ImageMagick-devel",
        "ghostscript",
        "poppler-utils",
        "fop"
      ],
      "services" : {
        "gearmand" : true,
        "memcached" : true
      },
      "php" : {
        "pecls" : [
          "memcached",
          "imagick"
        ],
        "install_gearman_extension" : true,
        "install_apcu_extension" : true
      }
    },
    "nodejs" : {
      "npm_packages" : [
        { "name" : "less" },
        { "name" : "gulp" }
      ]
    },
    "elasticsearch" : {
      "version" : "1.7.6",
      "allocated_memory" : "512m"
    },
    "atom" : {
      "git_repo" : "git://github.com/ryersonlibrary/atom.git",
      "git_revision" : "RULA/2.4.x",
      "plugins" : [
        {
          "name" : "rulaArchivesPlugin",
          "git_repo" : "https://github.com/ryersonlibrary/rulaArchivesPlugin.git"
        }
      ],
      "config" : {
        "factories" : {
          "user_timeout" : "3600"
        }
      }
    }
  },
  "override_attributes" : {
    "php" : {
      "pear_channels" : [
        "pecl.php.net"
      ]
    }
  },
  "run_list" : [
    "recipe[lits_vm]",
    "role[lemp]",
    "role[php7_0]",
    "recipe[atom]",
    "recipe[lits_vm::nginx_sites]",
    "recipe[lits_vm::elasticsearch]",
    "recipe[lits_vm::ffmpeg]",
    "recipe[lits_vm::enable_services]"
  ]
}