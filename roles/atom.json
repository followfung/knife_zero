{
  "name": "atom",
  "description": "Sets up an Access to Memory instance",
  "json_class": "Chef::Role",
  "default_attributes": {
    "lits_vm": {
      "npm_modules": [
        { "name" : "less", "version" : "latest" },
        { "name" : "gulp", "version" : "latest" }
      ],
      "additional_packages": ["gearmand", "memcached", "ImageMagick", "ghostscript", "poppler-utils", "fop"]
    },
    "elasticsearch": {
      "version": "1.7.0",
      "allocated_memory": "512m"
    },
    "atom" : {
      "git_repo" : "git://github.com/ryersonlibrary/atom.git",
      "git_revision" : "RULA/2.2.x",
      "config" : {
        "factories" : {
          "user_timeout" : "3600"
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[lemp]",
    "recipe[lits_vm::elasticsearch]",
    "recipe[lits_vm::nodejs]",
    "recipe[lits_vm::ffmpeg]",
    "recipe[atom]"
  ]
}